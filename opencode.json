{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "${OLLAMA_HOST}/v1",
        "apiKey": "ollama"
      },
      "models": {
        "${OLLAMA_MODEL}": {
          "name": "${OLLAMA_MODEL}"
        }
      }
    }
  }
}
